
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<header class="navbar">
  <%= link_to :back do %>
    <span class="material-symbols-outlined">
      arrow_back
    </span>
  <% end %>
  <h1>Sign up</h1>
  <%= f.submit "Sign up" %>
</header>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: :name %>
  </div>

  <div class="field">
    <%= f.email_field :email, autocomplete: "email", placeholder: :email %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password"+ (@minimum_password_length? "(#{@minimum_password_length} characters minimum)" : '') %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password" %>
  </div>

  <div class="actions">
  </div>
<% end %>

<%= render "devise/shared/links" %>
