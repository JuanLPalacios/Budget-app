<%= form_with(model: [group, expense]) do |form| %>
  <header class="navbar">
    <%= link_to group_expenses_path(params[:group_id]) do %>
      <span class="material-symbols-outlined">
        arrow_back
      </span>
    <% end %>
    <h1>New Expense</h1>
    <%= form.submit %>

  </header>
  <% if errors.any? %>
    <div class="errors">
      <h2><%= pluralize(errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
        <% errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :name, placeholder: :name %>
  </div>

  <div class="field">
    <%= form.number_field :amount, placeholder: :amount %>
  </div>
  <div class="field">
    <span>Groups</span>
    <% options = current_user.groups.map() { |group| [group.name, group.id, class: group.icon] } %>
    <%= form.select :groups, options, {selected: @groups}, {multiple: true, required: true} %>
  </div>

  <div>
  </div>
<% end %>
